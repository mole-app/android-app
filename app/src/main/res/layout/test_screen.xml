<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize">

        <com.mole.android.mole.MoleMessage
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/green"
            app:additional_info="invisible"
            app:postfix="Ñ€." />

        <com.mole.android.mole.MoleMessage
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/green"
            app:additional_info="visible"
            app:postfix="" />

        <include
            android:id="@+id/test_actionbar"
            layout="@layout/test_actionbar" />

        <include
            android:id="@+id/test_buttons"
            layout="@layout/test_buttons" />

        <include
            android:id="@+id/test_colors"
            layout="@layout/test_colors" />

        <include
            android:id="@+id/test_typography"
            layout="@layout/test_typography" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
