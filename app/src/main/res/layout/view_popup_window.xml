<?xml version="1.0" encoding="utf-8"?>
<com.mole.android.mole.ui.blur.BlurView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blur_popup"
    android:layout_width="@dimen/popup_width"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <Button
        android:id="@+id/edit_popup"
        style="@style/MoleView.Popup"
        android:layout_width="@dimen/popup_width"
        android:text="@string/edit"
        app:layout_constraintBottom_toTopOf="@id/delete_popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_popup"
        style="@style/MoleView.Popup"
        android:layout_width="@dimen/popup_width"
        android:layout_marginTop="10dp"
        android:text="@string/delete"
        app:layout_constraintBottom_toTopOf="@id/balance_popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_popup" />

    <Button
        android:id="@+id/balance_popup"
        style="@style/MoleView.Popup"
        android:layout_width="@dimen/popup_width"
        android:text="@string/balance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_popup" />

</com.mole.android.mole.ui.blur.BlurView>
