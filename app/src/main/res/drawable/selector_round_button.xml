<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <ripple android:color="@color/white">
            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="#44000000" />
                </shape>
            </item>

            <item android:id="@android:id/background">
                <shape android:shape="oval">
                    <gradient android:angle="0" android:endColor="@color/gradient_button_active_end" android:startColor="@color/gradient_button_active_start" />
                </shape>
            </item>
        </ripple>

    </item>

    <item android:state_enabled="false">
        <shape android:shape="oval">
            <gradient android:angle="0" android:endColor="@color/gradient_button_disable_end" android:startColor="@color/gradient_button_disable_start" />
        </shape>
    </item>

</selector>
