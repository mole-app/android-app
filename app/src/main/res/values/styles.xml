<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MoleButton">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/MoleText.Medium.Text2</item>
        <item name="android:textColor">@drawable/selector_text_button</item>
    </style>

    <style name="MoleButton.Alert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_alert_borderless_button</item>
        <item name="android:textAppearance">@style/MoleText.Regular.Text1</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MoleButton.Popup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_popup_borderless_button</item>
        <item name="android:textAppearance">@style/MoleText.Regular.Text1</item>
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="MoleButton.Rectangle">
        <item name="android:background">@drawable/selector_rectangle_button</item>
        <item name="android:radius">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="MoleButton.Round">
        <item name="tint">@drawable/selector_tint_button</item>
        <item name="android:background">@drawable/selector_round_button</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="MoleButton.Icon">
        <item name="android:background">@drawable/shape_icon_button</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="MoleButton.Rectangle.Borderless">
        <item name="android:background">@drawable/selector_rectangle_borderless_button</item>
    </style>

    <style name="MoleText.Error">
        <item name="android:textColor">?attr/colorDeny</item>
    </style>

    <style name="MoleButton.BorderlessIcon">
        <item name="android:background">@drawable/selector_icon_borderless_button</item>
        <item name="android:radius">60dp</item>
        <item name="android:tint">?attr/colorBorderlessIcon</item>
        <item name="android:layout_width">@dimen/menu_item_icon_size</item>
        <item name="android:layout_height">@dimen/menu_item_icon_size</item>
    </style>

    <style name="MoleText">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="MoleText.Medium">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="MoleText.Light">
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="MoleText.Regular">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MoleText.Bold">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="MoleText.Light.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MoleText.Medium.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MoleText.Medium.Headline">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MoleText.Bold.Headline">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MoleText.Medium.Text1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MoleText.Regular.Text1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MoleText.Medium.Text2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MoleText.Regular.Text2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MoleText.Medium.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MoleText.Regular.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MoleToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="MoleDialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>