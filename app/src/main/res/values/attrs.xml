<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorAccept" format="color" />
    <attr name="colorDeny" format="color" />
    <attr name="colorButtonRipple" format="color" />
    <attr name="colorButtonActiveStart" format="color" />
    <attr name="colorButtonActiveEnd" format="color" />
    <attr name="colorButtonDisableStart" format="color" />
    <attr name="colorButtonDisableEnd" format="color" />
    <attr name="colorButtonIconStart" format="color" />
    <attr name="colorButtonIconEnd" format="color" />
    <attr name="textColorPrimary" format="color" />
    <attr name="textColorDisabled" format="color" />
    <attr name="colorIcon" format="color" />
    <attr name="colorIconDisabled" format="color" />
    <attr name="colorBorderlessIcon" format="color" />
    <declare-styleable name="MoleBottomNavigationBar">
        <attr name="foregroundFloatingActionButton" format="reference|color" />
        <attr name="menuBottomNavigation" format="reference"/>
    </declare-styleable>
    <declare-styleable name="MoleActionBarWithText">
        <attr name="textTitle" format="string" localization="suggested" />
        <attr name="backVisible">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="1" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="MoleMessage">
        <attr name="additional_info">
                <!-- Visible; the default value. -->
                <enum name="visible" value="0" />
                <!-- Not displayed. -->
                <enum name="invisible" value="1" />
        </attr>
        <attr name="postfix" format="string" />
    </declare-styleable>
</resources>
