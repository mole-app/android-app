<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mole" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccept">@color/green</item>
        <item name="colorDeny">@color/red</item>
        <item name="colorButtonRipple">@color/white</item>
        <item name="colorButtonActiveStart">@color/gradient_button_active_start</item>
        <item name="colorButtonActiveEnd">@color/gradient_button_active_end</item>
        <item name="colorButtonDisableStart">@color/gradient_button_disable_start</item>
        <item name="colorButtonDisableEnd">@color/gradient_button_disable_end</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:colorBackground" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="style_rectangle_button">
        <item name="android:background">@drawable/selector_rectangle_button</item>
        <item name="android:radius">60dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">preloaded_fonts</item>
    </style>

    <style name="style_round_button">
        <item name="android:background">@drawable/selector_round_button</item>
        <item name="android:radius">60dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">preloaded_fonts</item>
    </style>

</resources>