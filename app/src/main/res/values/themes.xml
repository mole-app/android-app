<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mole" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccept">@color/green</item>
        <item name="colorDeny">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:colorBackground" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:buttonStyle">@style/Button</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="background">?attr/colorPrimary</item>
        <!-- remove shadow below action bar -->
        <item name="android:elevation">0dp</item>
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <!--        <item name="android:colorButtonNormal">@color/my_color</item>-->
<!--        <item name="colorButtonNormal">@drawable/selector_button</item>-->
<!--        <item name="android:colorButtonNormal">@drawable/selector_button</item>-->
        <item name="background">@drawable/selector_button</item>
        <item name="android:radius">60dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="colorControlHighlight">?attr/colorAccent</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>