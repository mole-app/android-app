<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mole" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorAccept">@color/color_accept</item>
        <item name="colorDeny">@color/color_deny</item>
        <item name="colorButtonRipple">@color/white</item>
        <item name="colorButtonActiveStart">@color/gradient_button_active_start</item>
        <item name="colorButtonActiveEnd">@color/gradient_button_active_end</item>
        <item name="colorButtonDisableStart">@color/gradient_button_disable_start</item>
        <item name="colorButtonDisableEnd">@color/gradient_button_disable_end</item>
        <item name="colorButtonIconStart">@color/gradient_button_icon_start</item>
        <item name="colorButtonIconEnd">@color/gradient_button_icon_end</item>
        <item name="colorTextPrimary">@color/color_text</item>
        <item name="colorTextDisabled">@color/color_text_disabled</item>
        <item name="colorIcon">@color/color_icon</item>
        <item name="colorIconDisabled">@color/color_icon_disabled</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
    </style>

    <style name="MoleRectangleButton">
        <item name="android:background">@drawable/selector_rectangle_button</item>
        <item name="android:textColor">@drawable/selector_text_button</item>
        <item name="android:radius">60dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/MoleText</item>
    </style>

    <style name="MoleRoundButton">
        <item name="tint">@drawable/selector_tint_button</item>
        <item name="android:background">@drawable/selector_round_button</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="MoleIconButton">
        <item name="android:background">@drawable/shape_icon_button</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MoleBorderlessButton">
        <item name="android:background">@drawable/selector_rectangle_borderless_button</item>
        <item name="android:textColor">@drawable/selector_text_button</item>
        <item name="android:radius">60dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/MoleText</item>
    </style>

    <style name="MoleBorderlessButtonMiniIcon">
        <item name="android:background">@drawable/selector_icon_borderless_button</item>
        <item name="android:radius">60dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="MoleText">
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

</resources>